---
pagination:
  data: posts
  alias: post
  size: 1
  preview: eleventy.preview.path.slug
permalink:
  build: "/{{post.slug}}/"
  preview: "/:slug/preview/"
---
<html>
  <body>
    <article>
      <small>
        🏠 <a href="/">Home</a> –
        <date>{{post.publishedAt}}</date> –
        <a href="/{{post.slug}}">Permalink</a></small>
      <h1>{{post.title}}</h1>
      <main>{{ post.body }}</main>
    </article>
  </body>
</html>