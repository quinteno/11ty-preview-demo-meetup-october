---
pagination:
  data: posts
  size: 1
  alias: post
permalink:
  build: "/{{post.slug}}/"
  serverless: "/:slug/preview/"
---
<html>
  <body>
    <article>
      <small>
        <a href="/">🏠 Home</a> –
        <date>{{post.publishedAt}}</date> –
        <a href="/{{post.slug}}">Permalink</a></small>
      <h1>{{post.title}}</h1>
      <main>{{ post.body }}</main>
    </article>
  </body>
</html>